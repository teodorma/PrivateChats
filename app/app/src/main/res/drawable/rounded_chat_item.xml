<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/holo_blue_light"/> <!-- Background color of the chat bubble -->

    <stroke android:width="2dp" android:color="@color/black" /> <!-- Border width and color -->
    <corners android:radius="7dp" /> <!-- Corner radius for rounded corners -->

    <!-- Optional: Add padding inside the shape -->
    <padding
        android:left="4dp"
        android:top="2dp"
        android:right="4dp"
        android:bottom="2dp"/>
</shape>
